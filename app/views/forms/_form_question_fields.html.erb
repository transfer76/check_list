<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <%= f.text_field :title, class: 'form-control col-md-8 mb-3 border', type: 'text', placeholder: 'Question text?' %>
  <%= f.text_field :description, class: 'form-control col-md-10 border', type: 'text', placeholder: 'Question detailed description' %>
  <div class="btn list-button">
	<%= link_to_remove_association '', f, data: { confirm: 'Are you sure?' }, class: 'fa fa-times-circle fa-lg'%>
  </div>
</div>
 