<%= form_with(model: form, local: true) do |form| %>
  <%= render partial: 'partials/form_errors', locals: {model: @form} %>

  <div class="container">
    <div class="actions list-button">
      <%= form.submit 'Save' %>
    </div>
    <div class="row">
    <div class="col-md-5 offset-md-3 mb-3">
      <%= form.text_field :title, class: 'form-control form-control-lg', type: 'text', placeholder: 'Form title' %>
    </div>
  </div>
      
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form.text_field :description, class: 'form-control form-control-lg', type: 'text', placeholder: 'Form detailed description'%>
    </div>
  </div>

  </div>
<% end %>
